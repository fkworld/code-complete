{
  "cSpell.ignorePaths": [".git", ".turbo", ".vscode", "generated", "node_modules", "pnpm-lock.yaml"],
  "cSpell.words": ["cloc", "commitlint", "fkworld", "vitest"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "files.associations": {
    "*.env": "env",
    "*.env.*": "env",
    "*.vue": "vue"
  },
  "[vue]": {
    // vue 文件使用 eslint 进行格式化，避免 prettier 覆盖 eslint 规则
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  // shortest 是默认值，这里强制覆盖一下
  "typescript.preferences.importModuleSpecifier": "shortest"
}
